<%= form_for(@categoria) do |f| %>
  <% if @categoria.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@categoria.errors.count, "Erro") %>: *Os campos são obrigatórios!</h2>

      <ul>
      <% @categoria.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <div class="field">
    <label >Descrição*:</label>
    <%= f.text_field :description, :size =>25%>
    </div>
  </p>
  <p>
    <button type="submit">Salvar</button>
  <p>
<% end %>