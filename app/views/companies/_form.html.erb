<%= form_for(@empresa) do |f| %>
  <% if @empresa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@empresa.errors.count, "error") %> *Os campos são obrigatórios!</h2>

      <ul>
      <% @empresa.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <div class="field">
    <label >Nome*</label>
    <%= f.text_field :fantasy_name%>
    </div>
  </p>

   <p>
    <div class="field">
    <label >Cnpj*</label>
    <%= f.text_field :cnpj%>
    </div>
 </p>

  <p>
    <div class="field">
    <label >Url*</label>
    <%= f.text_field :url%>
    </div>
  </p>

  <p>
    <div class="field">
    <label >E-mail*</label>
    <%= f.text_field :email%>
    </div>
  </p>

  <p>
    <div class="field">
    <label >Contato*</label>
    <%= f.text_field :phone%>
   </div>
  </p>
  
  <p>
    <button type="submit">Salvar</button>
  <p>
<% end %>