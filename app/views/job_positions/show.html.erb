<h1>Detalhes da Vaga</h1>
<% if flash[:notice] %>
<div class="warning">
  <p><%= flash[:notice] %></p>
</div>
<% end %>
<%= link_to "ver todas as vagas", company_job_positions_path %>
<section>
  <ul>
    <% if @new_job_position %>
    <li><strong>Vaga nova!</strong></li>
    <% end %>
    <% if @last_expiration_days %>
    <li><strong>Ultimos dias para inscriçao</strong></li>
    <% end %>
    <% if @featured %>
      <li><strong>Vaga em destaque!</strong></li>
    <% end %>
    <li><strong>Título:</strong><%= @job_position.title %></li>
    <li><strong>Descrição:</strong><%= @job_position.description %></li>
    <li><strong>Data de Expiração:</strong><%= @job_position.expiration_date %></li>
    <li><strong>Status:</strong><%= @job_position.job_status %></li>
    <li><strong>Localização:</strong><%g= @job_position.location %></li>
    <li><strong>Empresa:</strong><%= @job_position.company.fantasy_name %></li>
    <li><strong>Categoria:</strong><%= @categoria.description %></li> 
    <li><%= link_to "Editar", edit_company_job_position_path(@job_position.company, @job_position) %></li>
    <li>essa vaga teve <%= @visits %> nas ultimas 24h</li>
    <% if user_signed_in? %>
      <button id="jobApplication">Candidatar-se</button>
      <div id="cadastro" class="modal fade">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title">Cadastre-se</h4>
              <p>Modal</p>
            </div>
          </div>
        </div>
      </div>
    <%else%>
      <button id="msgSignup">Candidatar-se</button>
      <h2 id="msgCadastre" class="hidden">Cadastre-se para candidatar-se a essa vaga</h2>
    <% end %>
  </ul>
</section>
<script>
$(document).ready(function(){
    $("#msgSignup").click(function(){
        $("#msgCadastre").removeClass("hidden");
    });
});
</script>
<script>
$(document).ready(function(){
 $("#jobApplication").click(function(){
    $("#cadastro").modal('show');
  });
});  
</script>